<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/backgroundColors"
    tools:context=".testActivity"
    tools:ignore="ExtraText">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textStyle="bold"
        android:text="TEST SECTION "/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="150dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:id="@+id/practiceTV"
        android:textStyle="bold"
        android:text="Hello name "/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="90dp"/>


<!--    <TextView-->
<!--        android:id="@+id/total_question"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Total Question : "-->
<!--        android:textSize="17dp"-->
<!--        android:textStyle="bold" />-->

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testQuestionText"
        android:textStyle="bold"
        android:textSize="17dp"
        android:text="They _____ the movie last night."
       />



    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:id="@+id/choice_layout"
        android:orientation="horizontal">




        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/firstChoiceBox"
            android:backgroundTint="@color/cardview_dark_background"
            android:text="were"/>
        <Space
            android:layout_width="50dp"
            android:layout_height="50dp"/>

       <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:backgroundTint="@color/cardview_dark_background"
            android:id="@+id/secondChoiceBox"
            android:text="watched "/>






    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/thirdChoice"
        android:backgroundTint="@color/cardview_dark_background"
        android:text="not"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="100dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:backgroundTint="@color/cardview_dark_background"
        android:id="@+id/nextBTN"
        android:text="NEXT QUESTION"/>









</LinearLayout>
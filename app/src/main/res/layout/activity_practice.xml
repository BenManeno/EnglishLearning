<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vanilla"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".practiceActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:layout_marginTop="-30dp"
        android:textStyle="bold"
        android:text="PRACTICE SECTION "/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="22dp"
    android:id="@+id/practiceTV"
    android:layout_marginTop="-80dp"
    android:textStyle="bold"
    android:text=" "/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="filling in the blank question below"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="70dp"
        android:id="@+id/practiceQTV"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/question1Text"

        />


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/firstChoiceBox"
            android:text="What"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/secondChoiceBox"
            android:text="When"/>




    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:id="@+id/nextBTN"
        android:text="NEXT QUESTION"/>









</LinearLayout>